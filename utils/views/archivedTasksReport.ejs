<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- <link
      href="http://netdna.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
      rel="stylesheet"
    /> -->
    <style type="text/css">
        body {
            background: #ffffff;
            margin-left: 10px;
            margin-right: 20px;

            align-items: center;
        }

        .text-white-50 {
            color: rgba(255, 255, 255, 0.5);
        }

        .bg-blue {
            background-color: #00b5ec;
        }

        .border-bottom {
            border-bottom: 1px solid #e5e5e5;
        }

        .box-shadow {
            box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.05);
        }
    </style>
</head>

<body>
    <h1 style="text-align:center"><u>Archived Tasks</u></h1>
    <main role="main" class="container">
        <% if (reportData.topics.length){%> <%
      
      reportData.topics.forEach(topic=>{%>

        <div>
            <ol>
                <h3>
                    <li><%= topic.topicData.heading %></li>
                </h3>
                <p><%= topic.topicData.description %></p>
                <% if(topic.tasks.length){%> <% topic.tasks.forEach(task=>{%>
                <div>
                    <ol>
                        <li>
                            <h4><%= task.taskData.heading %></h4>
                        </li>
                        <p><%= task.taskData.description %></p>
                        <h5>Comments:</h5>
                        <%if(task.comments.length){%> <% task.comments.forEach(comment=>{%>

                        <b><%= comment.user_id %>, <%= comment.timestamp%>: </b> <%=
            comment.text %>
                        <hr>
                        <% });%> <% }%>
                    </ol>
                </div>
                <% });%> <% }%>
            </ol>
        </div>


        <% });%> <% }%>
        <br />
        <h3>Independent Tasks</h3>
        <% if (reportData.independentTasks.length){%> <%
      reportData.independentTasks.forEach(task=>{%>
        <div>
            <h4><%= task.taskData.heading %></h4>
            <p><%= task.taskData.description %></p>
            <h5>Comments:</h5>
            <%if(task.comments.length){%> <% task.comments.forEach(comment=>{%>
            <p>
                <b><%= comment.user_id %>, <%= comment.timestamp%>: </b> <%=
          comment.text %>
            </p>
            <% });%> <% }%>
        </div>
        <% });%> <% }%>
    </main>
    <script src="http://code.jquery.com/jquery-1.10.2.min.js"></script>
    <!-- <script src="http://netdna.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script> -->
    <script type="text/javascript"></script>
</body>

</html>